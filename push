source config

# Rebuild the repository and push everything to the local web server.

lockfile $ROOT/lock
pushd $ROOT

# Recreate the repodata.
pushd $ROOT/RPMS
createrepo .
popd

# Upload the new set of RPMs and repodata to the web server.
rsync -a $ROOT/RPMS $WEBSYNC

popd
rm -f $ROOT/lock
